<div class="splash">
  <div class="col-lg-4"></div>
  <div class="col-lg-4 col-xs-9 log-in">
    <h1> Log In </h1>
    <%= form_tag(url:login_path, role: "form") do %>
      <% if flash.any? %>
        <% flash.each do |message_type, message|%>
          <div class="alert alert-<%=message_type%>"><%= message %></div>
        <% end %>
      <% end %>
      <div class="form-group">
        <div class="row">
          <div class="col-lg-12">
            <%= label_tag :email%>
            <%= text_field_tag :email, nil, class: 'form-control' %>
          </div>
        </div>
        <br>
        <div class="row">
          <div class="col-lg-12">
            <%= label_tag :password%>
            <%= password_field_tag :password, nil, class: 'form-control' %>
          </div>
        </div>
        <br>
        <div class="row">
          <div class="col-lg-12">
            <%= submit_tag "Login", class: 'btn-block btn-info btn-sm' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-lg-4"></div>
</div>